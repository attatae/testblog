<h1>Listing Users</h1>
<hr>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>About</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.city %></td>
        <td><%= user.about %></td>
      </tr>
    <% end %>
  </tbody>
</table>

